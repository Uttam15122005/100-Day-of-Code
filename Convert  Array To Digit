//To convert Array to Digit
#include<iostream>
using namespace std;
void ConvertArrayToDigit(int arr[], int n){
    int ans = 0;
    for(int i=0; i<n; i++){
        ans =ans* 10 + arr[i];
        
    }
    cout<<"The Digit is: "<<ans;
}
int main(){
    int arr[] = {3,5,2,5,7,8,0,4};
    int n = sizeof(arr)/sizeof(arr[0]);
    ConvertArrayToDigit(arr, n);
    return 0;
}
